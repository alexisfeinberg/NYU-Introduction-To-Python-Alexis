def roll_dice():
    roll = random.randint(min, max)
    global roll_number
    if roll != 2 or roll != 12:
        print('You rolled a: {}'.format(roll))
        roll_number += 1
        print('You have {} rolls left'.format(maxroll-roll_number))
        return roll
    elif roll == 12:
        print("You have to fight!")
    else:
        print(
            'You rolled a 2! You were attacked and eaten by zombie beavers'
            "That's too bad!")